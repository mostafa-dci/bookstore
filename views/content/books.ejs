                <% if ( i % 3 == 0) {%>
              <div class="row">
                <% }%>
            <!-- Example for one book -->
                <div class="col-md-4 mb-3">
                    <div class="card bg-dark author">
                        <div class="card-body">
                            <h5 class="card-title"><%= book.title%></h5>
                            <p class="card-text author-text"><%= book.description%></p>
                        </div>
